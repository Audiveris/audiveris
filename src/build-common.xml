<!--         <echo message="user=|${ant4hg.log.user}|" /> -->
<!--         <echo message="date=|${ant4hg.log.date}|" /> -->
<!--         <echo message="summary=|${ant4hg.log.summary}|" /> -->

    </target>
    
</project>
